<% layout('/layouts/boilerplate') -%>
<body class="bg-gray-100 text-gray-800">

    <!-- Hero Section -->
    <section id="home" class="bg-cover bg-center h-screen" style="background-image: url('https://source.unsplash.com/featured/?nature');">
        <div class="h-full flex flex-col justify-center items-center bg-black bg-opacity-50">
            <h2 class="text-5xl font-extrabold text-white mb-6 text-center animate-fadeIn">Welcome to Hotels</h2>
            <p class="text-xl text-white mb-10 text-center animate-fadeIn delay-200">Explore The Beautiful Hotels</p>
            <a href="#services" class="bg-blue-500 text-white px-6 py-3 rounded-full hover:bg-blue-700 transition duration-300">Learn More</a>
        </div>
    </section>

    <!-- About Section -->
    <section id="about" class="py-20 bg-white">
        <div class="container mx-auto text-center">
            <h2 class="text-4xl font-bold mb-8">About Us</h2>
            <p class="text-lg leading-relaxed text-gray-600">We are a team of dedicated professionals committed to delivering top-quality services to our clients. Our mission is to help you achieve your goals with innovative solutions.</p>
        </div>
    </section>

    <!-- Services Section -->
    <section id="services" class="py-20 bg-gray-100">
        <div class="container mx-auto text-center">
            <h2 class="text-4xl font-bold mb-8">Our Services</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <div class="bg-white p-6 rounded-lg shadow-lg transform hover:scale-105 transition duration-300">
                    <h3 class="text-2xl font-bold mb-4">Service 1</h3>
                    <p class="text-gray-600">Create your own listings</p>
                </div>
                <div class="bg-white p-6 rounded-lg shadow-lg transform hover:scale-105 transition duration-300">
                    <h3 class="text-2xl font-bold mb-4">Service 2</h3>
                    <p class="text-gray-600">Make changes in your listings</p>
                </div>
                <div class="bg-white p-6 rounded-lg shadow-lg transform hover:scale-105 transition duration-300">
                    <h3 class="text-2xl font-bold mb-4">Service 3</h3>
                    <p class="text-gray-600">Add reviews in your as well as in others listings</p>
                </div>
            </div>
        </div>
    </section>


</body>


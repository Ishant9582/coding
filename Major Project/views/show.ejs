<% layout('/layouts/boilerplate') -%>

    <body>
        <div class="main">
            <div class=" flex flex-row justify-center gap-5 flex-wrap">
                <div class="cardddd max-w-sm    rounded-lg ">
                    <img class="rounded-t-lg imgggg hh" src="<%= all.image.url %>" alt="nt" />

                    <div class="p-5">
                        <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"><b>
                            Owned By : <%= all.owner[0].username %>
                        </b></h5>

                        <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"><b>
                                <%= all.title %>
                            </b></h5>

                        <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
                            <%= all.description %>
                        </p>
                        <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">&#8377; <%=
                                all.price.toLocaleString("en-IN") %>
                        </p>
                        <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
                            <%= all.location %>
                        </p>
                        <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
                            <%= all.country %>
                        </p>

                    </div>
                    
                        <a class="aa" href="http://localhost:8080/listings/<%= all.id %>/edit"><button
                            class="btn btn-outline btn-accent">Edit</button></a>
                    &nbsp;
                    <form class="aa" action="/listings/<%= all._id %>?_method=delete" method="post">
                        <button class="btn btn-outline btn-warning">Delete</button>
                    </form>
                     
          

                    <br>
                    <br>
                    <hr>
                    <br>
                    <% if (!userdata) { %>
                        <div id="alert-3" class="flex items-center p-4 mb-4 text-green-800 rounded-lg bg-green-50 dark:bg-gray-800 dark:text-green-400" role="alert">
                          <svg class="flex-shrink-0 w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/>
                          </svg>
                          <span class="sr-only">Info</span>
                          <div class="ms-3 text-sm font-medium">
                            <p>please login to add reviews !!!!!</p>
                          </div>
                          <button type="button" class="ms-auto -mx-1.5 -my-1.5 bg-green-50 text-green-500 rounded-lg focus:ring-2 focus:ring-green-400 p-1.5 hover:bg-green-200 inline-flex items-center justify-center h-8 w-8 dark:bg-gray-800 dark:text-green-400 dark:hover:bg-gray-700" data-dismiss-target="#alert-3" aria-label="Close">
                            <span class="sr-only">Close</span>
                            <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                            </svg>
                          </button>
                        </div>
                      <% } %> 



                    <% if (userdata) { %>
                        <div class="max-w-md mx-auto bg-white p-5 rounded-lg shadow-lg">
                            <div class="flex justify-between items-center mb-4">
                                <h2 class="text-xl font-bold">Leave a Review</h2>
                            </div>
                            <form action="/listings/<%= all.id %>/review" method="post">
                                <div class="mb-4">
                                    <label for="rating" class="block text-sm font-medium text-gray-700"></label>
                                    <!-- <div class="relative mt-1">
                                        <input type="range" id="rating" name="" min ="1" max="5"
                                            class="w-full h-2 bg-gray-200 rounded-lg appearance-none cursor-pointer">
                                    </div> -->
                                    <fieldset class="starability-slot">
                                        
                                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                                        <input type="radio" id="first-rate1" name= "review[rating]"  value="1" />
                                        <label for="first-rate1" title="Terrible">1 star</label>
                                        <input type="radio" id="first-rate2" name= "review[rating]"  value="2" />
                                        <label for="first-rate2" title="Not good">2 stars</label>
                                        <input type="radio" id="first-rate3" name= "review[rating]"  value="3" />
                                        <label for="first-rate3" title="Average">3 stars</label>
                                        <input type="radio" id="first-rate4" name= "review[rating]"  value="4" />
                                        <label for="first-rate4" title="Very good">4 stars</label>
                                        <input type="radio" id="first-rate5" name= "review[rating]"  value="5" />
                                        <label for="first-rate5" title="Amazing">5 stars</label>
                                      </fieldset>
                                </div>
                                <div class="mb-4">
                                    <label for="comments" class="block text-sm font-medium text-gray-700">Comments</label>
                                    <textarea id="comments" name="review[comment]" required rows="4"
                                        class="w-full p-2 mt-1 border border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"></textarea>
                                </div>
                                <div class="flex justify-end">
                                    <button type="submit"
                                        class="px-4 py-2 font-medium text-white bg-indigo-600 rounded-lg hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Submit</button>
                                </div>
                            </form>
                        </div>
                    <% } %>

                    <br>
                    
                    <hr>

                </div>
            </div>    
    <h2 class="text-2xl font-semibold mb-4">All Reviews</h2>
    <div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3">
        <!-- Review Card -->
        <% for(review of all.reviews){ %>
        <div class="bg-white p-4 rounded-lg shadow">
            <p><b>Given By : @<%= review.author.username %></b></p>
           
          
            <p class="starability-result" data-rating="<%= review.rating %>">
              
            </p>
            <p class="mt-2"><%= review.comment %></p>
            
            <form action="/listings/<%= all._id %>/review/<%= review._id %>?_method=DELETE" method="post">
                <button class="btn btn-sm btn-dark mb-2 mt-2 ml=0" >Delete</button>
            </form>
        </div>
        <% } %>

    </div>
    </div>
</div>
</body>

